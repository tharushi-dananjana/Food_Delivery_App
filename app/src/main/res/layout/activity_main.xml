<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/yellowImg"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/background_introoo"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/hii"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="48dp"
                        android:text="Hi, Tharushi"
                        android:textColor="#ffffff"
                        android:textSize="28sp"
                        app:layout_constraintEnd_toStartOf="@+id/profile"
                        app:layout_constraintHorizontal_bias="0.137"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/profile"
                        android:layout_width="59dp"
                        android:layout_height="49dp"
                        android:layout_marginTop="40dp"
                        android:layout_marginEnd="48dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:srcCompat="@drawable/profile" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/deliveryC"
                        android:layout_width="299dp"
                        android:layout_height="51dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pickupC">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            android:rotationY="6"
                            app:srcCompat="@drawable/back" />

                        <TextView
                            android:id="@+id/textView7"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="115dp"
                            android:paddingStart="16dp"
                            android:text="Delivery "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="24dp"
                            android:text="Choose your location" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pickupC"
                        android:layout_width="299dp"
                        android:layout_height="51dp"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="32dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/hii">

                        <ImageView
                            android:id="@+id/imageView9"
                            android:layout_width="20dp"
                            android:layout_height="18dp"
                            android:layout_marginStart="16dp"
                            android:layout_marginTop="15dp"
                            android:rotationY="2"
                            app:srcCompat="@drawable/back" />

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="115dp"
                            android:paddingStart="16dp"
                            android:text="Pickup "
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textView12"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="100dp"
                            android:layout_marginTop="24dp"
                            android:text="Find your nearest outlet" />


                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/category"
                        android:layout_width="128dp"
                        android:layout_height="31dp"
                        android:layout_marginTop="16dp"
                        android:text="Categories"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.177"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/deliveryC" />

                    <TextView
                        android:id="@+id/seeAll"
                        android:layout_width="63dp"
                        android:layout_height="27dp"
                        android:layout_marginTop="16dp"
                        android:text="See All"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.695"
                        app:layout_constraintStart_toEndOf="@+id/category"
                        app:layout_constraintTop_toBottomOf="@+id/deliveryC"
                        tools:textSize="20sp" />

                    <TextView
                        android:id="@+id/offer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="24dp"
                        android:text="Offers"
                        android:textSize="20sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintHorizontal_bias="0.05"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/pizzaC"
                        tools:textStyle="bold" />

                    <ImageView
                        android:id="@+id/offerImg"
                        android:layout_width="323dp"
                        android:layout_height="180dp"
                        android:layout_marginStart="43dp"
                        android:layout_marginEnd="27dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/offer"
                        app:srcCompat="@drawable/banner" />

                    <TextView
                        android:id="@+id/off"
                        android:layout_width="172dp"
                        android:layout_height="31dp"
                        android:text="40% Off All Items"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintBottom_toBottomOf="@+id/offerImg"
                        app:layout_constraintEnd_toEndOf="@+id/offerImg"
                        app:layout_constraintHorizontal_bias="0.801"
                        app:layout_constraintStart_toStartOf="@+id/offerImg"
                        app:layout_constraintTop_toTopOf="@+id/offerImg"
                        app:layout_constraintVertical_bias="0.342" />

                    <TextView
                        android:id="@+id/textView10"
                        android:layout_width="121dp"
                        android:layout_height="24dp"
                        android:layout_marginTop="4dp"
                        android:text="Sep 10 - Oct 10"
                        android:textColor="#ffffff"
                        android:textSize="20dp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="@+id/offerImg"
                        app:layout_constraintHorizontal_bias="0.653"
                        app:layout_constraintStart_toStartOf="@+id/offerImg"
                        app:layout_constraintTop_toBottomOf="@+id/off" />

                    <androidx.cardview.widget.CardView
                        android:id="@+id/burgurC"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/pizzaC"
                        app:layout_constraintTop_toBottomOf="@+id/category">

                        <ImageView
                            android:id="@+id/burgur"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/pop_2" />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/pizzaC"
                        android:layout_width="140dp"
                        android:layout_height="190dp"
                        android:layout_marginStart="44dp"
                        android:layout_marginTop="16dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/category">

                        <ImageView
                            android:id="@+id/pizza"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            app:srcCompat="@drawable/pop_3" />
                    </androidx.cardview.widget.CardView>

                </androidx.constraintlayout.widget.ConstraintLayout>


            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottomNav"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="?android:attr/windowBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:menu="@menu/bottom_nav_menu" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>